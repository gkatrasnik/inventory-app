extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Manufacturer name' name='name' required='true' value=(undefined===manufacturer ? '' : manufacturer.name) )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text' placeholder='Manufacturer description' name='description' required='true' value=(undefined===manufacturer ? '' : manufacturer.description) )
    button.btn.my-2.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
