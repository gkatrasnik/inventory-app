extends layout

block content

  h1 Delete Type: #{type.name}
  
  if type_bikes.length
  
    p #[strong Delete the following bikes before attempting to delete this type.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Bikes
    
      dl
      each bike in type_bikes
        dt 
          a(href=bike.url) #{bike.model} #{bike.size} #{bike._id}
        dd #{bike.description}

  else
    p Do you really want to delete this Type?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=type._id )

      button.btn.btn-primary(type='submit') Delete