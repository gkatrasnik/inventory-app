extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Type:
      input#name.form-control(type='text', placeholder='Road, MTB, etc.' name='name' value=(undefined===type ? '' : type.name))
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='description' name='description' value=(undefined===type ? '' : type.description))  
    button.btn.my-2.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
